<!DOCTYPE html>
<html lang="fr">
<head>

    <meta charset="UTF-8" lang="{{ app.request.locale }}">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">

    {% include "partial/ga.html.twig" %}
    {% include "partial/favicon.html.twig" %}

    <title>{% block title 'site_title'|trans %}</title>

    {% stylesheets
        "bundles/app/bootstrap-3.3.7/css/bootstrap.min.css"
        "bundles/app/font-awesome/css/all.min.css"
        "bundles/app/agency/css/agency.min.css"
        "bundles/app/css/main.css"
        "bundles/app/jquery/css/jquery-ui.min.css"
        "bundles/app/css/fonts.css"
        "bundles/app/agency/css/custom.css"
        filter="cssrewrite" %}
        <link rel="stylesheet" href="{{ asset_url }}" type="text/css">

        {% if app.request.locale == 'ar' %}
            {% stylesheets
                "bundles/app/bootstrap-3.3.7/css/bootstrap-rtl.min.css"
                filter="cssrewrite" %}
                <link rel="stylesheet" href="{{ asset_url }}" type="text/css">
            {% endstylesheets %}
        {% endif %}
    {% endstylesheets %}

    <!-- Custom Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Montserrat:400,700" rel="stylesheet" type="text/css">
    <link href='https://fonts.googleapis.com/css?family=Kaushan+Script' rel='stylesheet' type='text/css'>
    <link href='https://fonts.googleapis.com/css?family=Droid+Serif:400,700,400italic,700italic' rel='stylesheet'
          type='text/css'>
    <link href='https://fonts.googleapis.com/css?family=Roboto+Slab:400,100,300,700' rel='stylesheet' type='text/css'>


    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"
            integrity="sha384-0s5Pv64cNZJieYFkXYOTId2HMA2Lfb6q2nAcx2n0RTLUnCAoTTsS0nKEO27XyKcY"
            crossorigin="anonymous"></script>
    <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"
            integrity="sha384-ZoaMbDF+4LeFxg6WdScQ9nnR1QC2MIRxA1O9KWEXQwns1G8UNyIEZIQidzb0T1fo"
            crossorigin="anonymous"></script>
    <![endif]-->

    {% block additional_stylesheets %}
    {% endblock %}

</head>

<body id="page-top" class="index">
{% include "partial/fb_messenger.html.twig" %}

{% block header %}
    <!-- Navigation -->
    <nav id="mainNav" class="navbar navbar-default navbar-custom navbar-fixed-top">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header page-scroll">
            <button type="button" class="navbar-toggle" data-toggle="collapse"
                    data-target="#bs-example-navbar-collapse-1">
                <span class="sr-only">Toggle navigation</span>{{ 'home.menu.main'|trans }} <i class="fa fa-bars"></i>
            </button>
        </div>

        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
            <ul class="nav navbar-nav">
                <li class="hidden">
                    <a href="#page-top"></a>
                </li>
                <li>
                    <a class="page-scroll" href="{{ path('homepage') }}#projet">{{ 'home.menu.project'|trans }} </a>
                </li>
                <li>
                    <a class="page-scroll" href="{{ path('manual') }}">{{ 'home.menu.equipYourMosque'|trans }}</a>
                </li>
                <li>
                    <a class="page-scroll" href="{{ path('homepage') }}#mosquees">{{ 'home.menu.mosques'|trans }}</a>
                </li>
                <li>
                    <a class="page-scroll" href="{{ path('homepage') }}#faq">{{ 'home.menu.faq'|trans }}</a>
                </li>
                <li>
                    <a class="page-scroll" target="_blank" href="https://app.swaggerhub.com/apis/ibra/Mawaqit/1.0.0">api</a>
                </li>
                <li>
                    <a class="page-scroll" href="#contact">{{ 'home.menu.contactUs'|trans }}</a>
                </li>
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                        <i class="fa fa-globe"></i>&nbsp;{{ 'languages'|trans }}<span  class="caret"></span>
                    </a>
                    <ul class="dropdown-menu">
                        <li><a href="{{ path("homepage", {_locale: 'fr'}) }}">{{ 'fr'|trans }}</a></li>
                        <li><a href="{{ path("homepage", {_locale: 'ar'}) }}">{{ 'ar'|trans }}</a></li>
                    </ul>
                </li>
                <li>
                    <a href="{{ path("fos_user_registration_register") }}"><i class="fa fa-user"></i>&nbsp;{{ 'layout.register'|trans({}, 'FOSUserBundle') }}</a></li>
                <li>
                    <a href="{{ path("fos_user_security_login") }}"><i class="fa fa-sign-in-alt"></i>&nbsp;{{ 'layout.login'|trans({}, 'FOSUserBundle') }}</a>
                </li>
            </ul>
        </div>
        <!-- /.navbar-collapse -->
    </nav>

    <!-- Header -->
    <header>
        <div class="container">
            <div class="intro-text">
                {% block textHeader %}{% endblock %}
            </div>
        </div>
    </header>
{% endblock %}

{% block content %}
{% endblock %}

<!-- Contact Section -->
<section id="contact">
    <div class="container">
        <h2 class="section-heading">{{ 'home.menu.contactUs'|trans }}</h2>
        <div class="text-primary" style="font-weight: bold; font-size: 130%">
            <p>{{ 'home.text.contactUsText1'|trans }}</p>
            <p>{{ 'home.text.contactUsText2'|trans({'supportTelFR': supportTelFR, 'supportTelDZ': supportTelDZ, 'supportTelROW': supportTelROW})|raw }}</p>
        </div>

        <form name="sentMessage" id="contactForm" novalidate>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="{{ 'home.text.contactUsFormPlaceholder1'|trans }}" id="name" required
                               data-validation-required-message="{{ 'home.text.contactUsFormValidation1'|trans }}">
                        <p class="help-block text-danger"></p>
                    </div>
                    <div class="form-group">
                        <input type="email" class="form-control" placeholder="{{ 'home.text.contactUsFormPlaceholder2'|trans }}" id="email" required
                               data-validation-required-message="{{ 'home.text.contactUsFormValidation2'|trans }}">
                        <p class="help-block text-danger"></p>
                    </div>
                    <div class="form-group">
                        <input type="tel" class="form-control" placeholder="{{ 'home.text.contactUsFormPlaceholder3'|trans }}" id="phone" required
                               data-validation-required-message="{{ 'home.text.contactUsFormValidation3'|trans }}">
                        <p class="help-block text-danger"></p>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                                <textarea class="form-control" placeholder="{{ 'home.text.contactUsFormPlaceholder4'|trans }}" id="message" required
                                          data-validation-required-message="{{ 'home.text.contactUsFormValidation4'|trans }}"></textarea>
                        <p class="help-block text-danger"></p>
                    </div>
                </div>
                <div class="clearfix"></div>
                <div class="col-lg-12 text-center">
                    <div id="success"></div>
                    <button type="submit" class="btn btn-xl">{{ 'home.button.send'|trans }}</button>
                </div>
            </div>
        </form>
    </div>
</section>

<footer>
    <div class="container">
        <div class="row">
            <div class="col-md-3">
                <span class="copyright">Copyright &copy; ARCHILOG <span class="copyright-year"></span></span>
            </div>
            <div class="col-md-3">
                <ul class="list-inline social-buttons">
                    <li><a target="_blank" href="https://twitter.com/MawaqitTeam"><i class="fab fa-twitter"></i></a></li>
                    <li><a target="_blank" href="https://www.facebook.com/Mawaqit-878834798944718/"><i class="fab fa-facebook-f"></i></a></li>
                    <li><a target="_blank" href="https://www.youtube.com/channel/UCK0bHMvAlVL8NvyofiMulUw/"><i class="fab fa-youtube"></i></a></li>
                </ul>
            </div>
            <div class="col-md-3">
                <a href="{{ path('legal_notice') }}">{{ 'home.text.legalNotice'|trans }}</a>
            </div>
            <div class="col-md-3">
                Developped with phpstorm by <a target="_blank" href="https://www.jetbrains.com/?from=mawaqit"><img width="80px" src="{{ asset("bundles/app/agency/img/jetbrains-variant-4.svg") }}"></img></a>
            </div>
        </div>
    </div>
</footer>

{% javascripts
    '@AppBundle/Resources/public/jquery/js/jquery-1.12.4.min.js'
    '@AppBundle/Resources/public/jquery/js/jquery-ui.min.js'
    '@AppBundle/Resources/public/bootstrap-3.3.7/js/bootstrap.min.js'
    '@AppBundle/Resources/public/agency/js/jqBootstrapValidation.js'
    '@AppBundle/Resources/public/agency/js/contact_me.js'
    '@AppBundle/Resources/public/agency/js/agency.min.js'
    '@AppBundle/Resources/public/js/terms_of_use.js'
    '@AppBundle/Resources/public/agency/js/custom.js' %}
    <script src="{{ asset_url }}"></script>
{% endjavascripts %}

{% block additional_javascripts %}
{% endblock %}

</body>
</html>
