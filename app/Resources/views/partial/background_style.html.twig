<style>
body {
    {% if mosque.conf.backgroundType == 'color' %}
        background-color: {{ mosque.conf.backgroundColor }};
    {% endif %}

    {% if mosque.conf.backgroundType == 'motif' %}
        {% if mosque.conf.backgroundMotif == '0' and mosque.image1 %}
            background-image: linear-gradient(0deg, rgba(0, 0, 0, 0.6),rgba(0, 0, 0, 0.7)), url('{{ vich_uploader_asset(mosque, 'file1') }}');
        {% elseif mosque.conf.backgroundMotif == '-1' and mosque.image2 %}
            background-image: linear-gradient(0deg, rgba(0, 0, 0, 0.6),rgba(0, 0, 0, 0.7)), url('{{ vich_uploader_asset(mosque, 'file2') }}');
        {% else %}
            background-image: linear-gradient(0deg, rgba(0, 0, 0, 0.6),rgba(0, 0, 0, 0.3)), url('/bundles/app/prayer-times/img/background-{{ mosque.conf.backgroundMotif }}.jpg');
        {% endif %}
    {% endif %}
}
</style>